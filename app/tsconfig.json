{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "esModuleInterop": true
  },
  "include": ["app", "data", "types"],
  "exclude": ["node_modules"]
}
